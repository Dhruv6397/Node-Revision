<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL SHORTENER</title>
    <style>
        body {
            display: flex; 
            flex-direction: column; 
            align-items: center; 
            color: aliceblue; 
            background-color: rgb(93, 94, 106);
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            display: flex;
            align-items: center;
            flex-direction: column; 
            background-color: rgb(1, 62, 105); 
            height: 80vh;
            width: 80vw;
            border-radius: 20px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        h1 {
            margin-bottom: 20px;
            font-size: 2.5em;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
        }

        label {
            font-size: 1.2em;
            margin-bottom: 10px;
        }

        input[type="text"] {
            padding: 10px;
            width: 60%;
            font-size: 1em;
            border: none;
            border-radius: 5px;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        button {
            padding: 10px 20px;
            font-size: 1.2em;
            border: none;
            border-radius: 5px;
            background-color: rgb(47, 174, 247);
            color: white;
            cursor: pointer;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: rgb(34, 149, 210);
        }

        ul {
            list-style: none;
            padding: 0;
            margin: 20px 0 0 0;
            width: 60%;
            max-height: 200px;
            overflow-y: auto;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        ul li {
            display: flex;
            justify-content: space-around;
            padding: 10px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        ul li:nth-child(odd) {
            background-color: rgba(0, 0, 0, 0.05);
        }

        ul li span {
            flex: 1;
            text-align: center;
        }

        /* Custom scrollbar */
        ul::-webkit-scrollbar {
            width: 8px;
        }

        ul::-webkit-scrollbar-thumb {
            background-color: rgba(255, 255, 255, 0.4);
            border-radius: 5px;
        }

        ul::-webkit-scrollbar-thumb:hover {
            background-color: rgba(255, 255, 255, 0.7);
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>URL SHORTENER</h1> 
        <% if(locals.id){%>
            <p>URL Generated: http://localhost:8001/url/<%=id%></p>
        <% } %>
        <form method="POST" action="/url/">
            <label>Enter Your Original URL:</label>
            <input type="text" name="url" placeholder="https://example.com">
            <button type="submit">GENERATE</button>
        </form>
        
        <% if(locals.urls && locals.urls.length > 0) { %>
            <ul>
                <% urls.forEach((url, index) => { %>
                    <li>
                        <span><%= index + 1 %></span>
                        <span><%= url.shortId %></span>
                        <span><%= url.redirectURL %></span>
                        <span><%= url.visitHistory.length %></span>
                    </li>
                <% }) %>
            </ul>
        <% } %>
    </div>
</body>
</html>
